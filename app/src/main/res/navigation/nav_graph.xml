<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <action
        android:id="@+id/action_popup_to_mainFragment"
        app:popUpTo="@id/taskListFragment" />

    <action
        android:id="@+id/action_to_taskFragment"
        app:destination="@id/taskFragment" />

    <action
        android:id="@+id/action_to_searchFragment"
        app:destination="@id/searchFragment" />

    <fragment
        android:id="@+id/dailyTaskListFragment"
        android:name="com.example.todolist.ui.DailyTaskListFragment"
        tools:layout="@layout/fragment_task_list" >
    </fragment>

    <fragment
        android:id="@+id/essentialTaskListFragment"
        android:name="com.example.todolist.ui.EssentialTaskListFragment"
        tools:layout="@layout/fragment_task_list" >
    </fragment>

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.todolist.ui.TaskListFragment"
        tools:layout="@layout/fragment_task_list">
    </fragment>

    <fragment
        android:id="@+id/importantTaskListFragment"
        android:name="com.example.todolist.ui.ImportantTaskListFragment"
        tools:layout="@layout/fragment_task_list" >
    </fragment>

    <fragment
        android:id="@+id/doneTaskListFragment"
        android:name="com.example.todolist.ui.DoneTaskListFragment"
        tools:layout="@layout/fragment_task_list" >
    </fragment>

    <fragment
        android:id="@+id/taskFragment"
        android:name="com.example.todolist.ui.TaskFragment"
        tools:layout="@layout/fragment_task">
        <argument
            android:name="task"
            app:argType="com.example.todolist.data.model.Task"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.todolist.ui.SearchFragment"
        tools:layout="@layout/fragment_search"/>

</navigation>